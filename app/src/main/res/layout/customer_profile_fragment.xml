<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/donater_notificatcart_view_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F6FFF6"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text"
                        android:layout_weight=".4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="My Profile"
                        android:textAllCaps="false"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/log_out_btn"
                        android:layout_weight="1.6"
                        android:text="LogOut"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/user_name_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            android:text="Edit profile "
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center"
                android:text="Update Profile"
                android:textSize="25dp"
                android:textColor="@color/black"

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/activity_customer_Update_update_et_fName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/card_edge"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14dp"
                android:drawableLeft="@drawable/ic_baseline_group_add"
                android:hint=" Enter First name"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />

            <EditText
                android:id="@+id/activity_customer_Update_update_et_lName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_edge"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14dp"
                android:drawableLeft="@drawable/ic_baseline_group_add"
                android:hint=" Enter Last name"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />

            <EditText
                android:id="@+id/activity_customer_Update_update_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:background="@drawable/card_edge"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/ic_baseline_event_24"
                android:hint=" Enter Address"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />

            <EditText
                android:id="@+id/activity_customer_Update_update_et_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:background="@drawable/card_edge"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/ic_baseline_hiking_24"
                android:hint=" Enter Street"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />

            <EditText
                android:id="@+id/activity_customer_Update_update_et_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_edge"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14dp"
                android:drawableLeft="@drawable/ic_baseline_emoji_transportation_24"
                android:hint=" Enter City"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />

            <EditText
                android:visibility="gone"
                android:id="@+id/activity_customer_Update_update_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_edge"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14dp"
                android:drawableLeft="@drawable/ic_baseline_featured_play_list_24"
                android:hint=" Enter Email"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />

            <EditText
                android:id="@+id/activity_customer_Update_update_et_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_edge"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="14dp"
                android:maxLength="10"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:hint=" Enter Mobile no"
                android:paddingLeft="5dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"/>

            <Button
                android:id="@+id/activity_profile_Update_update_btn_updated"
                android:text="Update"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_edge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>