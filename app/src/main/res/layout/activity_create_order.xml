<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/homeui2"
    tools:context=".Activity.Customer.CreateOrderActivity">

    <TextView
        android:text="Order create"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="29dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="Buyer name "
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="*"
            android:textColor="@color/col_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/activity_create_et_seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:hint="" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="Buyer mobile "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="*"
            android:textColor="@color/col_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/activity_create_et_seller_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="5dp"
        android:inputType="number"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_date_range_24"
        android:hint="" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="Order description "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="*"
            android:textColor="@color/col_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/activity_create_order_et_details"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="5dp"
        android:paddingTop="9dp"
        android:inputType="textMultiLine"
        android:paddingBottom="9dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:hint=" Enter order details" />

    <Button
        android:id="@+id/activity_create_btn_create_order"
        android:textSize="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"
        android:text="Create"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="100dp"
        android:background="@drawable/button_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>