<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:text="Update Profile"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/activity_seller_register_update_et_fName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_group_add"
        android:hint="First name" />

    <EditText
        android:id="@+id/activity_seller_register_update_et_lName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_group_add"
        android:hint="Last name" />

    <EditText
        android:id="@+id/activity_seller_register_update_et_mobile_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        android:hint="Mobile no" />

    <EditText
        android:id="@+id/activity_seller_register_update_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_event_24"
        android:hint="Address" />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/activity_seller_register_update_sp_district"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/activity_seller_register_update_et_vehicle_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_baseline_local_car_wash_24"
        android:hint="Vehicle No." />

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/activity_seller_register_update_sp_type"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_gravity="center"
        android:background="@drawable/card_edge"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:textSize="14dp"
        android:hint=" Enter Vehicle type" />

    <Button
        android:id="@+id/activity_seller_register_update_btn_register"
        android:textSize="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:textAllCaps="false"
        android:text="Update"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="100dp"
        android:background="@drawable/button_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/activity_seller_register_cancel_btn_register"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:textAllCaps="false"
        android:layout_marginBottom="30dp"
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:elevation="100dp"
        android:background="@drawable/button_edge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>